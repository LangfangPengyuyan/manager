<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shengde.e3mall.dao.TbItemDao">

    <resultMap type="com.shengde.e3mall.entity.TbItem" id="TbItemMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="sellPoint" column="sell_point" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="barcode" column="barcode" jdbcType="VARCHAR"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="updated" column="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbItemMap">
        select id,
               title,
               sell_point,
               price,
               num,
               barcode,
               image,
               cid,
               status,
               created,
               updated
        from e3mall.tb_item
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbItemMap" parameterType="com.shengde.e3mall.entity.TbItem">
        select
        id, title, sell_point, price, num, barcode, image, cid, status, created, updated
        from e3mall.tb_item
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="sellPoint != null and sellPoint != ''">
                and sell_point = #{sellPoint}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
            <if test="barcode != null and barcode != ''">
                and barcode = #{barcode}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="created != null">
                and created = #{created}
            </if>
            <if test="updated != null">
                and updated = #{updated}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into e3mall.tb_item(id,title, sell_point, price, num, barcode, image, cid, status, created, updated) values (#{id},#{title}, #{sellPoint}, #{price}, #{num}, #{barcode}, #{image}, #{cid}, #{status}, #{created},
                #{updated})
    </insert>




</mapper>